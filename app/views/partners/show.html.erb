<div class="container">
	<div class="row">
		<% if @partner.photo.present? %>
		  	<h2>Voici les annonces avec le partenaire <%= cl_image_tag @partner.photo.path, width: 136, height: 67 %>
			</h2>
		<% else %>
			<h2>Voici les annonces avec le partenaire <%= @partner.name %> </h2>

		<% end %>

		<% @partner.sales.each do |sale| %>
			<p><%= sale.title %></p>
		<% end %>
	</div>
</div>





