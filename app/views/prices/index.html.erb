<div class="container">
	<div class="row">
		<div class="col-md-12">
		<h1>Prix immobilier à Saint-Maur-Des-Fossés</h1>
			<% if @prices.count >=1 %>
				<table class="table table-striped">
					<thead>
						<tr> 
							<th>Rues </th>
							<th>Voir<th>
						</th>
					</thead>
					<tbody>
						<% @prices.each do |price| %>
							<tr>
							
							<td><%= price.type_of_street %>
							<%= price.address %></td>
							<td><%= link_to "voir", price_path(price) %></td>
							<td>
								<% if current_user.try(:admin?) %>
               						<%= link_to "Effacer", price_path(price), method: :delete %>
              					<% end %>
              				</td>
							</tr>

							</p>
						<% end %>
					</tbody>
				</table>
			<% else %>
				<p> Il n' y a pas encore de rues renseignées. </p>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2 col-md-offset-5">
			<%= link_to "Ajouter une rue" , new_price_path, class:"btn btn-danger mb-30"%>
		</div>
	</div>
</div>


