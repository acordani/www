<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<%= simple_form_for @sale do|f| %>
				<%= f.input :title %>
				<%= f.input :description %>
				<%= f.input :price %>
				<%= f.input :city %>
				<%= f.input :active,     as: :radio_buttons %>
				<%= f.input :photos, as: :attachinary %>
				<%= f.button :submit %>
			<% end %>
		</div>
	</div>
</div>