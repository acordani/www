<div class="container">
<div class="mt-20"></div>
	<div class="row">
		<div class="col-md-10">
			<h1 class="title"><%= @sale.title.upcase %></h1>
			<h3><%= @sale.city %></h3>
		</div>
		<div class="col-md-2">
			<div class="label">
				<% if @sale.active == true %>
					A VENDRE
				<% else %>
					VENDU
				<% end %>
			</div>	
		</div>
	</div>
	
	<div class="mb-30"></div>
	<div class="row">
		<div class="col-md-2">
			<p><%= @sale.bedroom %> Chambres</p>
		</div>
		<div class="col-md-2">
			<p class="bold"><%= @sale.price %> €</p>
		</div>
	</div>
	<div class="mb-30"></div>
	<div class="row">
		<div class="col-md-4">
			<% if @sale.photos.present? %>
				<div class="col-md-12">
					<!-- Carousel -->
      				<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        				<!-- Wrapper for slides -->
        				<div class="carousel-inner" role="listbox">
          					<div class="item active">
            					<%= cl_image_tag @sale.photos.first.path, width: 470, height: 350, crop: :fill %>
            					<div class="open-full-screen-carousel"></div>
          					</div>
          					<% @sale.photos[1...@sale.photos.size].each do |photo| %>
          	 					<div class="item">
          							<%= cl_image_tag photo.path, width: 470, height: 350, crop: :fill %>
          							<div class="open-full-screen-carousel"></div>
            					</div>
          					<% end %>
        				</div>
       					 <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
					</div>
				</div>
			<% end %>
		</div>
		<div class="col-md-6 justify">
			<h4>Description</h4>
			<%= @sale.description %>
		</div>
	</div>
	<div class="mb-50"></div>
	<div class="horizontal-line"></div>
	
	<div class="mb-50"></div>
	<div class="row">
		<div class="col-md-6">
			<h3>LES INFOS ESSENTIELLES</h3>
			<%= @sale.price %>€
		</div>
		<div class="col-md-2">
			<%=image_tag("photo_identitee_alex.jpg", class:"image_rounded-show", alt:"Alexandre Cordani")%>
		</div>
		<div class="col-md-4">
			<div class="carte-nego">

				<h3> Alexandre Cordani</h3>
				<p>Négociateur Immobilier</p>
				<p>06 98 85 38 74</p>
				<p>alcordani@gmail.com</p>
			</div>
		</div>
	</div>
	<div class="mb-50"></div>
</div>
<div class="container-fluid">
	
	
	<div class="photo-full-width" style="background-image: linear-gradient(135deg, rgba(150,109,105,0.2), rgba(150,109,105,0.4)), url('<%= cl_image_path @sale.photos.first.path %>');">
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-6">
			<%= render 'sales/shared/dpe' %>
		</div>
	</div>
	<!-- <div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1 text-center">
		<% @sale.photos.each do |photo| %>
  			<p><%= cl_image_tag photo.path, width: 800, height: 600, crop: :fill, class:"photo_sale" %></p>
		<% end %>
	</div> -->
	
</div>

<!-- FULL SCREEN CAROUSEL -->
<div id="full-screen-display" class="hidden">
  <div id="full-carousel-example-generic" class="carousel slide hidden" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= cl_image_tag @sale.photos.first.path, width: 800, height: 600, crop: :fill %>
      </div>
      <% @sale.photos[1...@sale.photos.size].each do |photo| %>
        <div class="item">
          <%= cl_image_tag photo.path, width: 800, height: 600, crop: :fill %>
        </div>
      <% end %>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#full-carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#full-carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <div id="close-full-screen-carousel"><i class="fa fa-times" aria-hidden="true"></i></div>
  </div>
</div>
<div id="full-wrapper-for-full-screen-carousel" class="hidden">
</div>

<% content_for(:after_js) do %>
  <script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDtSjv-fQlhRwNDSwMLdyfryCv2Sp5WSzA">
  </script>



  <%= javascript_tag do %>
    $(document).on('ready', function() {

      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' }
      }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(15);
      });
    })
  <% end %>
<% end %>